//Stylistic variables
cell-border = rgba(68, 65, 66, 0.89)
border-radius = 7px 7px
// BASIC & DEFAULT flextable STYLING
.flextable
    display: flex
    flex-flow: row wrap
    flex: 100%
.flextable--body
    border-left: 1px solid cell-border
    border-right: 1px solid cell-border
    border-bottom: 1px solid cell-border
    background-color : rgb(249, 248, 245)
    display: flex;
    flex-flow: row nowrap
.flextable--header, .flextable--body, .flextable--body-fixed
    display: flex
    flex: 100%
    flex-wrap: wrap
    font-size: 15px
.flextable--header
    border-radius: border-radius 0 0
    background: rgb(62, 62, 65)
.flextable--body
    border-radius: 0 0 border-radius
    overflow-x: hidden
.flextable--cell
    display: flex
    flex: 1 1
    overflow-x: hidden
    font-family: Tahoma, Arial, Helvetica;
.flextable--body .flextable--cell
    border-right: 1px solid cell-border
    border-bottom: 1px solid cell-border
    height: 50px
    display: flex
    align-items: center
    -webkit-text-size-adjust: none
.flextable--body .flextable--cell:last-of-type
    border-right: none
.flextable--row
    display: flex
    flex: 100%
    overflow: scroll
.flextable--header .flextable--cell
    color: white
    font-weight: bold
    padding: 15px 10px
    font-size: 16px
    border-left: 1px solid table-color
    border-bottom: 1px solid table-color
.flextable--data
    white-space: nowrap
    padding: 10px
    overflow-x: scroll

/*Helper Styling*/

//Centers horizontally and vertically
.flextable--cell-center
    align-items: center
    justify-content center

//Add scroll bar for FireFox: Targetting Windows
@-moz-document url-prefix()
    .flextable--row .flextable--cell:last-of-type
        margin-right: 20px;

//flextable FIXED STYLING
.flextable--body-fixed[data-max-height='3']
    max-height: 300px
    -webkit-overflow-scrolling: touch
    overflow-y: scroll !important
    overflow-y: overlay !important
    -ms-overflow-style: -ms-autohiding-scrollbar !important
.flextable--body-fixed[data-max-height='4']
    max-height: 400px
    overflow-y: scroll !important
    overflow-y: overlay !important
    -ms-overflow-style: -ms-autohiding-scrollbar !important
.flextable--body-fixed[data-max-height='5']
    max-height: 500px
    overflow-y: scroll !important
    overflow-y: overlay !important
    -ms-overflow-style: -ms-autohiding-scrollbar !important
.flextable--body-fixed[data-max-height='6']
    max-height: 600px
    overflow-y: scroll !important
    overflow-y: overlay !important
    -ms-overflow-style: -ms-autohiding-scrollbar !important
.flextable--fixed .flextable--cell:first-child
    border-left: 0
//Colors for table headers
.flextable[data-color='green']  .flextable--header
    background: rgb(45, 179, 114)
.flextable[data-color='light-blue']  .flextable--header
    background: rgb(27, 146, 196)
.flextable[data-color='red']  .flextable--header
    background: rgb(242, 67, 67)

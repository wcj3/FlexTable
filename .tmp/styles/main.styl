// BASIC & DEFAULT FLEXTABLE STYLING
table-color = rgba(0, 228, 153, 0.97)
cell-border = rgba(68, 65, 66, 0.89)
.flexTable
    border-collapse: collapse
    display: flex
    flex-wrap: wrap
.flexTable--body, .flexTable--body-fixed
    border-left: 1px solid cell-border
    border-right: 1px solid cell-border
    border-bottom: 1px solid cell-border
    background-color : rgb(249, 248, 245)

.flexTable--header, .flexTable--body, .flexTable--body-fixed, .flexTable--row
    display: flex
    flex: 100%
    flex-wrap: wrap
.flexTable--cell
    font-family: Tahoma, Arial, Helvetica
    font-size: 15px
.flexTable--header
    background-color: table-color
    border-radius: 10px 10px 0 0
.flexTable--header .flexTable--cell, .flexTable--body .flexTable--cell, .flexTable--body-fixed .flexTable--cell
    display: flex
    flex: 1
    overflow: auto
.flexTable--row
    border-bottom: 1px solid cell-border
.flexTable--header .flexTable--row:only-child
    border-bottom: none
.flexTable--body .flexTable--cell, .flexTable--body-fixed .flexTable--cell
    border-left: 1px solid cell-border
    background-color: rgb(249, 248, 245)
.flexTable--body .flexTable--row:last-of-type, .flexTable--body-fixed .flexTable--row:last-of-type
    border-bottom: none
.flexTable--header .flexTable--row .flexTable--cell:first-of-type, .flexTable--body .flexTable--row .flexTable--cell:first-of-type, .flexTable--body-fixed .flexTable--row .flexTable--cell:first-of-type
    border-left: none
.flexTable--header .flexTable--row .flexTable--cell:last-of-type
    border-right: none
.flexTable--header .flexTable--cell
    color: white
    font-weight: bold
    padding: 15px 10px
    font-size: 16px
    border-left: 1px solid table-color
    border-bottom: 1px solid table-color
.flexTable--data
    white-space: nowrap
    padding: 10px
    overflow-x: auto;
    overflow-x: overlay;


/*Helper Styling*/
//Centers horizontally and vertically
.flexTable--cell-center
    align-items: center
    justify-content center
//Add scroll bar for FireFox: Targetting Windows
@-moz-document url-prefix()
    .flexTable--row .flexTable--cell:last-of-type
        margin-right: 20px;

//FLEXTABLE FIXED STYLING
.flexTable--body-fixed[data-max-height='3']
    max-height: 300px
    overflow-y: scroll
    overflow-y: overlay
    -ms-overflow-style: -ms-autohiding-scrollbar
.flexTable--fixed .flexTable--cell:first-child
    border-left: 0
